{
  "reports": [
    {
      "type": "json",
      "path": "%pwd%/generated/reports/xdry_report.json"
    }
  ],
  "directories": [
    "%pwd%/../_testdata/php/",
    "%pwd%/../_testdata/javascript/"
  ],
  "normalizers": [
    {
      "level": 1,
      "extension": ".php",
      "command": "php",
      "args": [
        "/home/ubuntu/projects/x-dry-php-plugin/bin/console",
        "normalize:level-1",
        "%FILEPATH%"
      ]
    },
    {
      "level": 2,
      "extension": ".php",
      "command": "php",
      "args": [
        "/home/ubuntu/projects/x-dry-php-plugin/bin/console",
        "normalize:level-2",
        "%FILEPATH%"
      ]
    },
    {
      "level": 1,
      "extension": ".js",
      "command": "node",
      "args": [
        "/home/ubuntu/projects/x-dry-javascript-plugin/index.js",
        "normalize:level-1",
        "%FILEPATH%"
      ]
    },
    {
      "level": 2,
      "extension": ".js",
      "command": "node",
      "args": [
        "/home/ubuntu/projects/x-dry-javascript-plugin/index.js",
        "normalize:level-2",
        "%FILEPATH%"
      ]
    }
  ]
}