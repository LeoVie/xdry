{
  "settings": {
    "minCloneLengths": {
      "level-1": 1,
      "level-2": 1,
      "level-3": 1
    }
  },
  "reports": [
    {
      "type": "json",
      "path": "generated/reports/xdry_report.json"
    },
    {
      "type": "html",
      "path": "generated/reports/xdry_report.html"
    }
  ],
  "directories": [
    "php/",
    "javascript/"
  ],
  "normalizers": [
    {
      "level": 1,
      "extension": ".php",
      "language": "php",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.php",
        "leovie/x-dry-php-plugin:latest",
        "normalize:level-1",
        "/file.php"
      ]
    },
    {
      "level": 2,
      "extension": ".php",
      "language": "php",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.php",
        "leovie/x-dry-php-plugin:latest",
        "normalize:level-2",
        "/file.php"
      ]
    },
    {
      "level": 1,
      "extension": ".js",
      "language": "javascript",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.js",
        "leovie/x-dry-javascript-plugin:latest",
        "normalize:level-1",
        "/file.js"
      ]
    },
    {
      "level": 2,
      "extension": ".js",
      "language": "javascript",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.js",
        "leovie/x-dry-javascript-plugin:latest",
        "normalize:level-2",
        "/file.js"
      ]
    }
  ]
}