{
  "settings": {
    "minCloneLengths": {
      "level-1": 10,
      "level-2": 20
    }
  },
  "reports": [
    {
      "type": "json",
      "path": "%pwd%/reports/xdry_report.json"
    }
  ],
  "directories": [
    "%pwd%/test/_testdata/php/",
    "%pwd%/test/_testdata/javascript/"
  ],
  "normalizers": [
    {
      "level": 1,
      "extension": ".php",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.php",
        "leovie/x-dry-php-plugin:latest",
        "normalize:level-1",
        "/file.php"
      ]
    },
    {
      "level": 2,
      "extension": ".php",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.php",
        "leovie/x-dry-php-plugin:latest",
        "normalize:level-2",
        "/file.php"
      ]
    },
    {
      "level": 1,
      "extension": ".js",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.js",
        "leovie/x-dry-javascript-plugin:latest",
        "normalize:level-1",
        "/file.js"
      ]
    },
    {
      "level": 2,
      "extension": ".js",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "%FILEPATH%:/file.js",
        "leovie/x-dry-javascript-plugin:latest",
        "normalize:level-2",
        "/file.js"
      ]
    }
  ]
}